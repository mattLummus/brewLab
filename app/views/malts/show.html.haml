- if user_signed_in?
  .row
    .small-12.columns
      %h2= link_to "Malt Styles", '/malts/index'
  .row
    .small-8.columns
      %h2= @malt.name
    .small-4.columns
      - if @malt.country?
        %h2= @malt.country.display_name
  .row
    .small-12.columns
      %p= @malt.description
      - if @malt.characteristics?
        %p= @malt.characteristics[0].description
      - if @malt.potential?
        %h4= "Potential(PPG): #{((@malt.potential-1)*1000).round(2)}"
      %h4= "Dry Yield: #{@malt.dry_yield}"
      %h4= "Max in Batch: #{@malt.max_in_batch}"
      %h4= "Moisture Content: #{@malt.moisture_content}"
      %h4= "Protein: #{@malt.protein}"
      %h4= "Requires Mashing: #{@malt.requires_mashing}"

- else
  .row
    .small-12.columns
      %h2 Please Try Again
